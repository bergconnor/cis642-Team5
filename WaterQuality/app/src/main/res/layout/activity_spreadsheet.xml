<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_spreadsheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="edu.ksu.cis.waterquality.SpreadsheetActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Data To Upload"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dateText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="Date:"/>
            <TextView
                android:id="@+id/cityText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="City:"/>
            <TextView
                android:id="@+id/stateText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="State:"/>
            <TextView
                android:id="@+id/coordiantesText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="Coordinates:"/>

            <TextView
                android:id="@+id/testText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="Test type:"/>

            <TextView
                android:id="@+id/serialText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="Serial number:"/>
            <TextView
                android:id="@+id/temperatureText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="Temperature:"/>
            <TextView
                android:id="@+id/precipitationText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="Precipitation:"/>
            <TextView
                android:id="@+id/nameText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="Name:"/>
            <TextView
                android:id="@+id/organizationText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="Organization:"/>
            <TextView
                android:id="@+id/commentText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="Comment:"/>
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >
            <EditText
                android:id="@+id/dateEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:textSize="18dp"
                android:background="@drawable/border"/>
            <EditText
                android:id="@+id/cityEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:textSize="18dp"
                android:background="@drawable/border"/>
            <EditText
                android:id="@+id/stateEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:textSize="18dp"
                android:background="@drawable/border"/>
            <EditText
                android:id="@+id/coordinatesEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:scrollbars="horizontal"
                android:textSize="18dp"
                android:background="@drawable/border"/>

            <EditText
                android:id="@+id/testEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:textSize="18dp"
                android:background="@drawable/border"/>

            <EditText
                android:id="@+id/serialEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:textSize="18dp"
                android:background="@drawable/border"/>

            <EditText
                android:id="@+id/temperatureEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:textSize="18dp"
                android:background="@drawable/border"/>

            <EditText
                android:id="@+id/precipitationEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:textSize="18dp"
                android:background="@drawable/border"/>

            <EditText
                android:id="@+id/nameEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:textSize="18dp"
                android:background="@drawable/border"/>

            <EditText
                android:id="@+id/organizationEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:textSize="18dp"
                android:background="@drawable/border"/>
            <EditText
                android:id="@+id/commentEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:textSize="18dp"
                android:background="@drawable/border"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/resultsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border"
        android:textSize="20dp"
        android:text="Make sure all data is accurate before pressing 'Upload Data'." />

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18dp"
        android:text="Upload Data"/>
</LinearLayout>
