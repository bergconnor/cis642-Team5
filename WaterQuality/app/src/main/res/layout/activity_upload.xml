<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_spreadsheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="edu.ksu.cis.waterquality.UploadActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Data To Upload"
        android:textColor="@color/black"
        android:background="@drawable/border"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/dateText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="Date"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/cityText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="City"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/stateText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="State"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/latitudeText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="Latitude"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/longitudeText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="Longitude"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/testText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="Test type"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/serialText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="Serial number"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/temperatureText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="Temperature"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/precipitationText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="Precipitation"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/nameText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="Name"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/organizationText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="Organization"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/commentText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:text="Comment"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:scrollbars="none"
                android:background="@drawable/border">
                <EditText
                    android:id="@+id/dateEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:maxLines="1"
                    android:inputType="textNoSuggestions"
                    android:background="@android:color/transparent"/>
            </HorizontalScrollView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:fillViewport="true"
                android:background="@drawable/border">
                <EditText
                    android:id="@+id/cityEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:maxLines="1"
                    android:inputType="textNoSuggestions"
                    android:background="@android:color/transparent"/>
            </HorizontalScrollView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:scrollbars="none"
                android:background="@drawable/border">
                <EditText
                    android:id="@+id/stateEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:maxLines="1"
                    android:inputType="textNoSuggestions"
                    android:background="@android:color/transparent"/>
            </HorizontalScrollView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:scrollbars="none"
                android:background="@drawable/border">
                <EditText
                    android:id="@+id/latitudeEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:maxLines="1"
                    android:inputType="textNoSuggestions"
                    android:background="@android:color/transparent"/>
            </HorizontalScrollView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:scrollbars="none"
                android:background="@drawable/border">
                <EditText
                    android:id="@+id/longitudeEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:maxLines="1"
                    android:inputType="textNoSuggestions"
                    android:background="@android:color/transparent"/>
            </HorizontalScrollView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:scrollbars="none"
                android:background="@drawable/border">
                <EditText
                    android:id="@+id/testEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:maxLines="1"
                    android:inputType="textNoSuggestions"
                    android:background="@android:color/transparent"/>
            </HorizontalScrollView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:scrollbars="none"
                android:background="@drawable/border">
                <EditText
                    android:id="@+id/serialEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:maxLines="1"
                    android:inputType="textNoSuggestions"
                    android:background="@android:color/transparent"/>
            </HorizontalScrollView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:scrollbars="none"
                android:background="@drawable/border">
                <EditText
                    android:id="@+id/temperatureEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:maxLines="1"
                    android:inputType="textNoSuggestions"
                    android:background="@android:color/transparent"/>
            </HorizontalScrollView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:scrollbars="none"
                android:background="@drawable/border">
                <EditText
                    android:id="@+id/precipitationEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:maxLines="1"
                    android:inputType="textNoSuggestions"
                    android:background="@android:color/transparent"/>
            </HorizontalScrollView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:scrollbars="none"
                android:background="@drawable/border">
                <EditText
                    android:id="@+id/nameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:maxLines="1"
                    android:inputType="textNoSuggestions"
                    android:background="@android:color/transparent"/>
            </HorizontalScrollView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:scrollbars="none"
                android:background="@drawable/border">
                <EditText
                    android:id="@+id/organizationEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:maxLines="1"
                    android:inputType="textNoSuggestions"
                    android:background="@android:color/transparent"/>
            </HorizontalScrollView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:scrollbars="none"
                android:background="@drawable/border">
                <EditText
                    android:id="@+id/commentEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:maxLines="1"
                    android:inputType="textNoSuggestions"
                    android:background="@android:color/transparent"/>
            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/uploadButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18dp"
        android:text="Upload Data"
        android:onClick="onUploadClick"/>
</LinearLayout>
